{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "noImplicitAny": false,
    "noEmit": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "lib": ["es2017"],
    "sourceMap": true,
    "paths": {
      "@app/*": ["src/*"]
    },
    "baseUrl": ".",
    "outDir": "dist"
  },
  "exclude": ["node_modules"]
}
