{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "noImplicitAny": false,
    "noEmit": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "lib": ["es2017", "esnext", "dom"],
    "sourceMap": true,
    "paths": {
      "@app/*": ["src/*"]
    },
    "baseUrl": "."
  },
  "exclude": ["node_modules"]
}
