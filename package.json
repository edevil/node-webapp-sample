{
  "name": "node-webapp-sample",
  "version": "1.0.0",
  "description": "Sample node.js webapp with the recommended modules for basic functionality.",
  "main": "src/server.ts",
  "repository": "github:edevil/node-webapp-sample",
  "scripts": {
    "typeorm": "node -r ts-node/register -r reflect-metadata ./node_modules/.bin/typeorm",
    "start": "nodemon",
    "test": "jest",
    "build": "tsc -p tsconfig.build.json",
    "lint": "tslint 'src/**/*.ts'",
    "pretty": "prettier --list-different 'src/**/*.ts'",
    "tslint-check": "tslint-config-prettier-check ./tslint.json"
  },
  "engines": {
    "node": ">=10.11.0",
    "npm": ">=6.4.0"
  },
  "author": "Andre Cruz",
  "license": "ISC",
  "dependencies": {
    "@emartech/cls-adapter": "^1.1.2",
    "@godaddy/terminus": "^4.1.0",
    "@koa/cors": "^2.2.2",
    "@sentry/node": "^4.1.1",
    "apollo-server-koa": "^2.1.0",
    "app-root-path": "^2.1.0",
    "bcryptjs": "^2.4.3",
    "bytes": "^3.0.0",
    "class-transformer": "^0.1.10",
    "class-transformer-validator": "^0.6.0",
    "class-validator": "^0.9.1",
    "csrf": "^3.0.6",
    "dotenv": "^6.1.0",
    "graphql": "^14.0.2",
    "graphql-depth-limit": "^1.1.0",
    "graphql-input-number": "0.0.10",
    "ioredis": "^4.2.0",
    "koa": "^2.5.3",
    "koa-bodyparser": "^4.2.1",
    "koa-compose": "^4.1.0",
    "koa-csrf": "^3.0.6",
    "koa-helmet": "^4.0.0",
    "koa-i18n": "^2.1.0",
    "koa-locale": "^1.3.0",
    "koa-mount": "^4.0.0",
    "koa-passport": "^4.1.1",
    "koa-ratelimit": "^4.1.2",
    "koa-router": "^7.4.0",
    "koa-session": "^5.9.0",
    "koa-static": "^5.0.0",
    "koa-views": "^6.1.4",
    "nunjucks": "^3.1.3",
    "oauth2-server": "^4.0.0-dev.2",
    "passport-google-oauth20": "^1.0.0",
    "passport-local": "^1.0.0",
    "passthrough-counter": "^1.0.0",
    "pg": "^7.5.0",
    "reflect-metadata": "^0.1.12",
    "typeorm": "^0.2.8",
    "uuid": "^3.3.2",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/graphql": "^14.0.3",
    "@types/ioredis": "^4.0.3",
    "@types/jest": "^23.3.5",
    "@types/koa-passport": "^4.0.2",
    "@types/koa-session": "^5.7.4",
    "@types/node": "^10.12.0",
    "@types/oauth2-server": "^3.0.9",
    "@types/passport": "^0.4.6",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.6",
    "@types/uuid": "^3.4.4",
    "jest": "^23.6.0",
    "nodemon": "^1.18.4",
    "prettier": "1.14.3",
    "supertest": "^3.3.0",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.1.3"
  },
  "prettier": {
    "trailingComma": "all",
    "printWidth": 120
  },
  "jest": {
    "rootDir": ".",
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "text-summary"
    ]
  }
}
