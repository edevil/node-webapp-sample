{
  "name": "node-webapp-sample",
  "version": "1.0.0",
  "description": "Sample node.js webapp with the recommended modules for basic functionality.",
  "main": "src/server.ts",
  "repository": "github:edevil/node-webapp-sample",
  "scripts": {
    "typeorm": "node -r ts-node/register -r reflect-metadata ./node_modules/.bin/typeorm",
    "start": "nodemon",
    "test": "jest",
    "build": "tsc -p tsconfig.build.json",
    "lint": "tslint 'src/**/*.ts'",
    "pretty": "prettier --list-different 'src/**/*.ts'",
    "tslint-check": "tslint-config-prettier-check ./tslint.json"
  },
  "engines": {
    "node": ">=10.13.0",
    "npm": ">=6.7.0"
  },
  "author": "Andre Cruz",
  "license": "ISC",
  "dependencies": {
    "@emartech/cls-adapter": "^1.2.0",
    "@godaddy/terminus": "^4.1.0",
    "@koa/cors": "^2.2.3",
    "@sentry/node": "^4.5.3",
    "apollo-server-koa": "^2.3.1",
    "app-root-path": "^2.1.0",
    "async-busboy": "^0.7.0",
    "bcryptjs": "^2.4.3",
    "bytes": "^3.1.0",
    "chalk": "^2.4.2",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "csrf": "^3.0.6",
    "dotenv": "^6.2.0",
    "graphql": "^14.1.1",
    "graphql-depth-limit": "^1.1.0",
    "graphql-input-number": "0.0.10",
    "graphql-redis-subscriptions": "^2.0.0",
    "ioredis": "^4.5.1",
    "jsonwebtoken": "^8.4.0",
    "koa": "^2.6.2",
    "koa-bodyparser": "^4.2.1",
    "koa-compose": "^4.1.0",
    "koa-csrf": "^3.0.7",
    "koa-helmet": "^4.0.0",
    "koa-i18n": "^2.1.0",
    "koa-locale": "^1.3.0",
    "koa-mount": "^4.0.0",
    "koa-passport": "^4.1.1",
    "koa-ratelimit": "^4.1.2",
    "koa-router": "^7.4.0",
    "koa-session": "^5.10.1",
    "koa-static": "^5.0.0",
    "koa-views": "^6.1.5",
    "nunjucks": "^3.1.7",
    "oauth2-server": "4.0.0-dev.2",
    "passport-google-oauth20": "^1.0.0",
    "passport-local": "^1.0.0",
    "passthrough-counter": "^1.0.0",
    "pg": "^7.8.0",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^2.2.0",
    "socket.io-redis": "^5.2.0",
    "typeorm": "^0.2.12",
    "uuid": "^3.3.2",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/graphql": "^14.0.5",
    "@types/ioredis": "^4.0.5",
    "@types/jest": "^23.3.13",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/koa-passport": "^4.0.2",
    "@types/koa-session": "^5.7.4",
    "@types/node": "^10.12.18",
    "@types/oauth2-server": "^3.0.10",
    "@types/passport": "^1.0.0",
    "@types/passport-local": "^1.0.33",
    "@types/socket.io": "^2.1.2",
    "@types/socket.io-redis": "^1.0.25",
    "@types/supertest": "^2.0.7",
    "@types/uuid": "^3.4.4",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.16.1",
    "supertest": "^3.4.2",
    "ts-jest": "^23.10.5",
    "ts-node": "^8.0.1",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pretty && npm run lint",
      "pre-push": "npm test"
    }
  },
  "prettier": {
    "trailingComma": "all",
    "printWidth": 120
  },
  "jest": {
    "rootDir": ".",
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "text-summary"
    ]
  }
}
